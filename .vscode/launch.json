{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:get_app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug",
        "--use-colors",
        "--factory"
      ],
      "preLaunchTask": "Start Services",
      "postDebugTask": "Stop Services",
      "justMyCode": true,
      "cwd": "${workspaceFolder}${pathSeparator}backend${pathSeparator}app",
      "console": "integratedTerminal",
      "redirectOutput": true,
      "env": {
        "PYTHONUNBUFFERED": "1", // for real-time logging
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONDEBUG": "0",
        "PYTHONVERBOSE": "0"
      },
      "jinja": false
    },
    {
      "name": "Backend: Celery",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "tasks",
        "worker",
        "--loglevel=DEBUG",
        "--pool=solo",
        "--concurrency=1"
      ],
      "cwd": "${workspaceFolder}/backend/app",
      "preLaunchTask": "wait-mq-db",
      "console": "integratedTerminal",
      "redirectOutput": true,
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1", // for real-time logging
        "PYTHONDONTWRITEBYTECODE": "1"
      }
    },
    {
      "name": "Frontend: npm",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "Wait for Backend"
    },
    {
      "name": "Frontend: Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      },
      "preLaunchTask": "Wait for Backend"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": [
        "Backend: Uvicorn",
        "Backend: Celery",
        "Frontend: npm",
        "Frontend: Chrome"
      ],
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}