    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter (debug mode)",
            "cwd": "frontend",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-renderer",
                "html",
                "--web-port",
                "80",
                "--web-hostname",
                "0.0.0.0",
                // "--no-sound-null-safety"
            ],
            // "deviceId": "web-server",
        },
        {
            "name": "Python Debugger: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1" // for real-time logging
            },
            "jinja": false
        }
        // {
