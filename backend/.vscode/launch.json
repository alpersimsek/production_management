{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:get_app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--log-level",
                "debug",
                "--use-colors"
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}${pathSeparator}app",
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1", // for real-time logging
                "PYTHONDONTWRITEBYTECODE": "1",
                "PYTHONDEBUG": "0",
                "PYTHONVERBOSE": "0"
            },
            "jinja": false
        }
    ]
}