{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:get_app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug",
        "--use-colors",
        "--factory"
      ],
      "preLaunchTask": "Start PostgreSQL Service",
      "postDebugTask": "Stop PostgreSQL Service",
      "justMyCode": true,
      "cwd": "${workspaceFolder}${pathSeparator}backend${pathSeparator}app",
      "console": "integratedTerminal",
      "redirectOutput": true,
      "env": {
        "PYTHONUNBUFFERED": "1", // for real-time logging
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONDEBUG": "0",
        "PYTHONVERBOSE": "0"
      },
      "jinja": false
    },
    {
      "name": "Frontend: npm run dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend-vue",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend: Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend-vue",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Backend + Frontend",
      "configurations": [
        "Backend: Uvicorn",
        "Frontend: npm run dev",
        "Frontend: Chrome"
      ],
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}
